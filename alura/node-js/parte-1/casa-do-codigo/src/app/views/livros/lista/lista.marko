<html>
    <head>
        <meta charset="utf-8"/>
    </head>
    <body>
        <h1>Listagem de livros</h1>
        <table id="livros">
            <tr>
                <td>ID</td>
                <td>Título</td>
                <td>Preço</td>
                <td>Editar</td>
                <td>Remover</td>
            </tr>
            <for|livro| of=data.livros>
                <tr id=`livro_${livro.id}`>
                    <td>${livro.id}</td>
                    <td>${livro.titulo}</td>
                    <td>${livro.preco}</td>
                    <td>
                        <a href="/livros/form/${livro.id}">Editar</a>
                    </td> 
                    <td>
                        <a href="#" data-ref="${livro.id}" data-type="remocao">Remover</a>
                    </td> 
                </tr>
            </for>
        </table> 
        <script src="/estatico/js/remove-livro.js">
        </script> 
    </body>
</html>
